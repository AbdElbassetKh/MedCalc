<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for entering medication name -->
    <EditText
        android:id="@+id/editTextMedicationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Medication Name"
        android:inputType="text" />

    <!-- EditText for entering dosage -->
    <EditText
        android:id="@+id/editTextDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Dosage"
        android:inputType="numberDecimal" />

    <!-- EditText for entering patient weight -->
    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Patient Weight (kg)"
        android:inputType="numberDecimal" />

    <!-- Button to calculate dosage -->
    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Dosage" />

    <!-- TextView to display calculated dosage -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculated Dosage: "
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <!-- Button to save calculation -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Calculation" />

</LinearLayout>
